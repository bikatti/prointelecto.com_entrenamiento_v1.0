
//- Contenido del index
mixin boxWithText(a="#", img="assents/img/icons/arrow_head.svg", n="", title="Box con texto", texto="Texto de la card")
 a(class="m-box m-box__anima", href=""+a)
  .m-box__title
   img(class="m-box__img", src=""+img, alt=""+n)
   span=title
  p.a-box__text=texto

mixin boxWithoutAll(a="#", img="assents/img/icons/arrow_head.svg", n="", title="Box con texto")
 a(class="m-box -box__anima1", href=""+a)
  .m-box__title
   img(class="m-box__img", src=""+img, alt=""+n)
   span=title

mixin boxWithImg(i="2", a="#", img="assents/img/icons/arrow_head.svg", n="", title="Box con texto")
 a(class="m-box -box__anima"+i, href=""+a)
  .m-box__title
   img(class="m-box__img", src=""+img, alt=""+n)
   span=title
 
mixin boxWithAll(i="2", a="#", img="assents/img/icons/arrow_head.svg", n="", title="Box con texto", texto="Texto de la card para explicar este link, así que pon tu explícación")
 a(class="m-box -box__anima"+i, href=""+a)
  .m-box__title
