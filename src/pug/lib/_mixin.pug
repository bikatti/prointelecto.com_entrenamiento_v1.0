   span=title
  p.a-box__text=texto


//- Menu de Contenidos
mixin menuSectionHeader(img, text="hello", title="Título")
 span.m-containerHeading__itemHeader.-linkHover
  .a-imgHeader
   .a-imgHeader__icon
    .a-imgHeader__container
     img.a-imgHeader__img(src=""+img, alt=""+text)
  .a-titleHeader
   .a-titleHeader__container
    span.a-titleHeader__title=title

mixin titleGroupContent(c, n)
 div(class="a-itemGroup__groupTitle "+c)
  .a-itemGroup__groupTitleText
   .a-itemGroup__navItem
    .a-itemGroup__navItemText=n

mixin itemContent(i, plus="", link="#", n="Nuevo")
 a(id=""+i, class="a-itemContent"+plus, href=""+link)
  span.a-titleHeader__title
   span.a-titleHeader__title=n

//- Menu Global desplegado
mixin linkPageMenuGlobal(a="#",n="Link abordo!!")
 a(class="a-itemContent -globalLink -colorWhite", href=""+a)
  .a-itemPart
   .a-itemPart__content=n

//- Contenido de texto
mixin titleContent(t="Pon aquí tu increíble título")
 .a-gridElement
  .a-gridElement__gridColumnLeft
   div
  .a-gridElement__gridColumnBox
   div: h2=t

mixin contenidoGrid(text)
 .a-gridElement
  .a-gridElement__gridColumnLeft
   div
  .a-gridElement__gridColumnBox
   div
    p=text

//- Links a contenidos next up/related
mixin relatedLink(no="",a="#", n="Vamos al link anterior")
 div(class="m-relatedLink -flex "+no)
  h3.m-relatedLink__title Anterior
  ul.m-relatedLink__link
   li: a(class="m-nextUpLink__element", href=""+a)
    .m-relatedLink__img
    span=n

mixin nextUpLink(no="", a="#", n="Vamos al link seguiente ahora!!")
 div(class="m-nextUpLink -flex "+no)
  h3.m-nextUpLink__title Siguiente
  ul.m-nextUpLink__link
   li: a(class="m-nextUpLink__element", href=""+a)
    .m-nextUpLink__img
    span=n

mixin navItemMobile(i="", l="", a="#", n="Link")
 li(class="nav-item "+i)
  a(class="nav-link -colorWhite"+l , href=""+a)=n